<div class="col-sm-8 col-xs-12 pull-right">
    <div class="panel panel-default bs-callout bs-callout-info">
        <div class="panel-body">
            <h3 class="text-center"><strong>OSC Message of the Day</strong></h3>
        </div>
        <pre><%= @motd %></pre>
    </div>
</div>

<div class="col-sm-4 col-xs-6">
    <%= link_to(oakley_url) do %>
        <div class="panel panel-default bs-callout bs-callout-info text-center panel-clickable">
            <h4><strong>Oakley Cluster Status</strong></h4>
            <%= render partial: 'node_status', locals: { showqer: @showqoakley } %>
        </div>
    <% end %>
</div>


<div class="col-sm-4 col-xs-6">
    <%= link_to(ruby_url) do %>
        <div class="panel panel-default bs-callout bs-callout-info text-center panel-clickable">
            <h4><strong>Ruby Cluster Status</strong></h4>
            <%= render partial: 'node_status', locals: { showqer: @showqruby } %>
        </div>
    <% end %>
</div>

<div class="col-sm-4 col-xs-6">
    <%= link_to(filesystem_url) do %>
        <div class="panel panel-default bs-callout bs-callout-info text-center panel-clickable">
            <h4><strong>File System Status</strong></h4>
            <div class="panel-body">
                <div>
                    <img src="<%= @ganglia.fileserver.report_load.small.png %>" class="img-responsive center-block">
                </div>
            </div>
        </div>
    <% end %>
</div>




