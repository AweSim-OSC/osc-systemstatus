    <% end %>
</div>

<div class="col-sm-4 col-xs-6">
    <%= link_to(filesystem_url) do %>
        <div class="panel panel-default bs-callout bs-callout-info text-center panel-clickable">
            <h4><strong>File System Status</strong></h4>
            <div class="panel-body">
                <div>
                    <img src="<%= @ganglia.fileserver.report_load.small.png %>" class="img-responsive center-block">
                </div>
            </div>
        </div>
    <% end %>
</div>




