<% @count.nil? ? @count = 0 : @count+=1 %>
<div class="row">&nbsp;</div>
<div class="row">
    <div class="col-sm-3 col-xs-6">
        <div class="panel panel-default panel-clickable">
            <div class="panel-body">
                <%= image_tag @ganglia.small.report_load.png, class: "img-responsive center-block", :onclick=>"$('#large-image#{@count}').replaceWith('"+
