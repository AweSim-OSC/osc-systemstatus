<% @OODClusters.each_with_index do |cluster, index | %>
    <% if index == @OODClusters.count - 1 && @OODClusters.count.odd? %>
        <div class="col-sm-3"></div>
    <% end %>
        <div class="col-sm-6 col-xs-12">
          <%= link_to(cluster_path(cluster.id)) do %>
              <div class="panel panel-default bs-callout bs-callout-info text-center panel-clickable">
                <h4><strong><%= cluster.metadata.title || cluster.id.titleize %> Cluster Status</strong></h4>
                <%= render partial: 'node_status', locals: { showqer: MoabShowqClient.new(cluster).setup } %>
              </div>
          <% end %>
        </div>
<% end %>
